<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_falldiagnosis_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:gravity="center"
            android:text="01"
            android:textColor="#444"
            android:textSize="22sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="ㅡ"
            android:textColor="#444"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_falldiagnosis_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:lineSpacingMultiplier="1.2"
            android:text="지난 1년 이내, \n 낙상 경험\n(등등)"
            android:textColor="#444"
            android:textSize="22sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_falldiagnosis_question"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:layout_weight="1"
        android:padding="20dp"
        android:src="@drawable/test" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_weight="0.5"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_falldiagnosis_answer_ok"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/round_corner_border_gray_r30"
            android:text="네"
            android:textColor="#444"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_falldiagnosis_answer_no"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/round_corner_border_gray_r30"
            android:text="아니오"
            android:textColor="#444"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>