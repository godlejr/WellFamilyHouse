<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <include
        android:layout_width="match_parent"
        android:layout_height="50dp"
        layout="@layout/toolbar_register" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="1"
        android:background="#999">

        <TextView
            android:text="알림 설정"
            android:layout_width="match_parent"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:layout_height="35dp"
            android:background="#f5f5f5"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="1dp"
            android:textStyle="normal|bold" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:background="#fff"
            android:layout_marginBottom="1dp">

            <TextView
                android:text="가족 알림"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textSize="17sp" />

            <Switch
                android:layout_height="match_parent"
                android:id="@+id/sw_setting_family"
                android:checked="false"
                android:gravity="center_vertical"
                android:theme="@style/SCBSwitch"
                android:layout_width="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:background="#fff"
            android:layout_marginBottom="1dp">

            <TextView
                android:text="알림 팝업"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/textView29"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textSize="17sp" />

            <Switch
                android:layout_height="match_parent"
                android:id="@+id/sw_setting_popup"
                android:checked="false"
                android:gravity="center_vertical"
                android:theme="@style/SCBSwitch"
                android:layout_width="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:background="#fff"
            android:layout_marginBottom="1dp">

            <TextView
                android:text="소리"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/textView30"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textSize="17sp" />

            <Switch
                android:layout_height="match_parent"
                android:id="@+id/sw_setting_sound"
                android:gravity="center_vertical"
                android:theme="@style/SCBSwitch"
                android:checked="false"
                android:layout_width="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="1"
        android:background="#999">

        <TextView
            android:text="계정 설정"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:id="@+id/textView17"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:background="#f5f5f5"
            android:layout_marginBottom="1dp"
            android:textSize="18sp"
            android:textStyle="normal|bold" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="#fff"
            android:layout_marginBottom="1dp"
            android:paddingLeft="15dp"
            android:id="@+id/ll_setting_pwd"
            android:paddingRight="15dp">
            <TextView
                android:text="계정 비밀번호 재설정"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textSize="17sp" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="match_parent"

                android:src="@drawable/arrow_right_black"
                android:tint="#999" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="#fff"
            android:layout_marginBottom="1dp"
            android:paddingLeft="15dp"
            android:id="@+id/ll_setting_disable"
            android:paddingRight="15dp">
            <TextView
                android:text="계정 비활성화"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textSize="17sp" />

            <ImageView
                android:text="Switch"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:src="@drawable/arrow_right_black"
                android:tint="#999"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:id="@+id/ll_blank1"
            android:background="#fff">

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="1.5"
        android:id="@+id/ll_blank2"/>
</LinearLayout>