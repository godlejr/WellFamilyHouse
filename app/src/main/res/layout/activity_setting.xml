<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <include
        android:layout_width="match_parent"
        android:layout_height="50dp"
        layout="@layout/toolbar_register" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#999">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#777"
          />
        <TextView
            android:text="알림 설정"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:background="#f5f5f5"
            android:textStyle="normal|bold"
            android:textSize="14sp"
            android:layout_height="30dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#777"
          />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:background="#fff"
            android:layout_marginBottom="1dp"
            android:layout_height="50dp">

            <TextView
                android:text="알림"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_width="1dp"
                android:layout_weight="3" />

            <Switch
                android:layout_height="match_parent"
                android:id="@+id/sw_setting_family"
                android:checked="false"
                android:gravity="center_vertical"
                android:theme="@style/SCBSwitch"
                android:layout_width="1dp"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:background="#fff"
            android:layout_marginBottom="1dp"
            android:layout_height="50dp">

            <TextView
                android:text="팝업"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:id="@+id/textView29"
                android:gravity="center_vertical"
                android:layout_weight="4" />

            <Switch
                android:layout_height="match_parent"
                android:id="@+id/sw_setting_popup"
                android:checked="false"
                android:gravity="center_vertical"
                android:theme="@style/SCBSwitch"
                android:layout_width="1dp"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:background="#fff"
            android:layout_height="50dp">

            <TextView
                android:text="소리"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/textView30"
                android:layout_weight="1"
                android:gravity="center_vertical" />

            <Switch
                android:layout_height="match_parent"
                android:id="@+id/sw_setting_sound"
                android:gravity="center_vertical"
                android:theme="@style/SCBSwitch"
                android:checked="false"
                android:layout_width="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#e5e5e5">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#777"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#777"
            android:layout_marginTop="8dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#999">

        <TextView
            android:text="계정 설정"
            android:layout_width="match_parent"
            android:id="@+id/textView17"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:background="#f5f5f5"
            android:textStyle="normal|bold"
            android:textSize="14sp"
            android:layout_height="30dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#777" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:background="#fff"
            android:layout_marginBottom="1dp"
            android:paddingLeft="15dp"
            android:id="@+id/ll_setting_pwd"
            android:paddingRight="15dp"
            android:layout_height="50dp">
            <TextView
                android:text="계정 비밀번호 재설정"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="match_parent"

                android:src="@drawable/arrow_right_black"
                android:tint="#999" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:background="#fff"
            android:layout_marginBottom="1dp"
            android:paddingLeft="15dp"
            android:id="@+id/ll_setting_disable"
            android:paddingRight="15dp"
            android:layout_height="50dp">
            <TextView
                android:text="계정 비활성화"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical" />

            <ImageView
                android:text="Switch"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:src="@drawable/arrow_right_black"
                android:tint="#999"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:id="@+id/ll_blank1"
            android:background="#fff">

        </LinearLayout>

    </LinearLayout>

</LinearLayout>