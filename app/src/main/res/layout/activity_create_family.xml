<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <include
        layout="@layout/toolbar_create"
        android:layout_width="match_parent"
        android:layout_height="50dp" />


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#777" />
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="#f5f5f5">

                <android.support.v4.widget.CircleImageView
                android:id="@+id/iv_create_family_img"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/main2" />

                <ImageButton
                    android:id="@+id/ib_create_family"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="50dp"
                    android:background="#00ffffff"
                    android:scaleType="fitCenter"
                    android:src="@drawable/edit_camera" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#777" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="#e5e5e5" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#777" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#f5f5f5"
                    android:paddingBottom="7dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="7dp"
                    android:text="가족 이름"
                    android:textColor="#542920"
                    android:textStyle="normal|bold"
                    android:textSize="17sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#777" />

                <EditText
                    android:id="@+id/et_create_family_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:ems="12"
                    android:gravity="start"
                    android:hint="가족 이름을 입력하세요."
                    android:inputType="text"
                    android:maxLines="1"
                    android:paddingBottom="20dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="20dp"
                    android:textColor="#000"
                    android:textColorHint="#bdbdbd"
                    android:textSize="17sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#777" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="#e5e5e5" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#777" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#f5f5f5"
                    android:paddingBottom="7dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="7dp"
                    android:text="가족 소개"
                    android:textColor="#542920"
                    android:textStyle="normal|bold"
                    android:textSize="17sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#777" />

                <EditText
                    android:id="@+id/et_create_family_introduce"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#fff"
                    android:ems="12"
                    android:gravity="start"
                    android:hint="우리 가족을 소개해 주세요."
                    android:inputType="text"
                    android:maxLines="1"
                    android:paddingBottom="20dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="20dp"
                    android:textColor="#000"
                    android:textColorHint="#bdbdbd"
                    android:textSize="17sp" />

            </LinearLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>