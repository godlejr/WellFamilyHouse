<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <include
            layout="@layout/toolbar_register"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#777" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#f5f5f5"
                android:gravity="center_vertical"
                android:paddingLeft="12dp"
                android:text="계정 비활성화 사유를 선택해주세요."
                android:textColor="#444"
                android:textSize="13sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#777" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#999"
            android:orientation="vertical">

            <RadioGroup
                android:id="@+id/rg_account_disable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/rb_account_disable1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:checked="false"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:selectAllOnFocus="false"
                    android:text="잠시 비활성화 처리 후 다시 사용할 예정입니다."
                    android:textColor="#444" />

                <FrameLayout
                    android:id="@+id/fl_account_disable1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#fff"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingBottom="12dp"
                        android:paddingLeft="47dp"
                        android:visibility="visible">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <Spinner
                                android:id="@+id/sp_account_disable"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:id="@+id/textView11"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="후 계정을 재활성화 하겠습니다." />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView28"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="계정을 비활성화하는 대신, " />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="#0066ff"
                                android:orientation="vertical"
                                android:paddingBottom="1dp">

                                <TextView
                                    android:id="@+id/tv_account_disable_logout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="#fff"
                                    android:gravity="center_horizontal"
                                    android:text="로그아웃"
                                    android:textColor="#0066ff" />

                            </LinearLayout>

                            <TextView
                                android:id="@+id/textView38"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" 하시겠습니까?" />
                        </LinearLayout>

                    </LinearLayout>
                </FrameLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#999" />

                <RadioButton
                    android:id="@+id/rb_account_disable2"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:text="개인 정보가 우려됩니다."
                    android:textColor="#444" />

                <FrameLayout
                    android:id="@+id/fl_account_disable2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:gravity="center"
                    android:paddingBottom="12dp"
                    android:paddingLeft="42dp"
                    android:paddingRight="42dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/textView21"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="회원님이 공유하는 정보와 공개범위는 언제든지 변경할 수 있습니다. 비활성화하기 전에 웰패밀리의 공개범위에 대해 자세히 알아보세요. 문의사항이나 걱정되는 부분이 있는 경우, 저희에게 알려주시면 연락드리겠습니다." />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|right"
                        android:background="#0066ff"
                        android:orientation="vertical"
                        android:paddingBottom="1dp">

                        <TextView
                            android:id="@+id/tv_account_disable_help1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|right"
                            android:layout_weight="1"
                            android:background="#fff"
                            android:gravity="center_horizontal"
                            android:text="문의하기"
                            android:textColor="#0066ff" />

                    </LinearLayout>

                </FrameLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#999" />

                <RadioButton
                    android:id="@+id/rb_account_disable3"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:text="웰패밀리에서 오는 알림이 너무 많습니다."
                    android:textColor="#444" />

                <FrameLayout
                    android:id="@+id/fl_account_disable3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:gravity="center"
                    android:paddingBottom="12dp"
                    android:paddingLeft="42dp"
                    android:paddingRight="20dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/textView22"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="웰패밀리 알림을 설정할 수 있습니다." />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|right"
                        android:background="#0066ff"
                        android:orientation="vertical"
                        android:paddingBottom="1dp">

                        <TextView
                            android:id="@+id/tv_account_disable_setting1"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|right"
                            android:layout_weight="1"
                            android:background="#fff"
                            android:gravity="center_horizontal"
                            android:text="알림 설정 수정"
                            android:textColor="#0066ff" />

                    </LinearLayout>

                </FrameLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#999" />

                <RadioButton
                    android:id="@+id/rb_account_disable4"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"

                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:text="웰패밀리 사용법을 잘 모르겠습니다."
                    android:textColor="#444" />

                <FrameLayout
                    android:id="@+id/fl_account_disable4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:gravity="center"
                    android:paddingBottom="12dp"
                    android:paddingLeft="42dp"
                    android:paddingRight="42dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/textView23"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="고객센터에서 도움을 얻으세요." />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|right"
                        android:background="#0066ff"
                        android:orientation="vertical"
                        android:paddingBottom="1dp">

                        <TextView
                            android:id="@+id/tv_account_disable_help2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|right"
                            android:layout_weight="1"
                            android:background="#fff"
                            android:gravity="center_horizontal"
                            android:text="고객센터에 문의하기"
                            android:textColor="#0066ff" />

                    </LinearLayout>

                </FrameLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#999" />

                <RadioButton
                    android:id="@+id/rb_account_disable5"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:text="웰패밀리 앱이 안전하지 않다고 생각합니다."
                    android:textColor="#444" />

                <FrameLayout
                    android:id="@+id/fl_account_disable5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:gravity="center"
                    android:paddingBottom="12dp"
                    android:paddingLeft="42dp"
                    android:paddingRight="42dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/textView24"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="웰페밀리가 안전하지 않다고 생각하는 경우, 언제라도 웰페밀리 고객센터의 도움을 받으실 수 있다는 점을 기억해주세요. 웰페밀리에서 공유되는 게시물 중 불편을 유발하는 게시물이 있다면 신고해주세요" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|right"
                        android:background="#0066ff"
                        android:orientation="vertical"
                        android:paddingBottom="1dp">

                        <TextView
                            android:id="@+id/tv_account_disable_help3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|right"
                            android:layout_weight="1"
                            android:background="#fff"
                            android:gravity="center_horizontal"
                            android:text="게시글 신고방법"
                            android:textColor="#0066ff" />

                    </LinearLayout>

                </FrameLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#999" />

                <RadioButton
                    android:id="@+id/rb_account_disable6"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:text="웰패밀리 계정이 해킹당했습니다."
                    android:textColor="#444" />

                <FrameLayout
                    android:id="@+id/fl_account_disable6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:gravity="center"
                    android:paddingBottom="12dp"
                    android:paddingLeft="42dp"
                    android:paddingRight="42dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/textView25"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="계정 설정을 통해 계정을 보호해보세요" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|right"
                        android:background="#0066ff"
                        android:orientation="vertical"
                        android:paddingBottom="1dp">

                        <TextView
                            android:id="@+id/tv_account_disable_setting2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|right"
                            android:layout_weight="1"
                            android:background="#fff"
                            android:gravity="center_horizontal"
                            android:text="계정 보호하기"
                            android:textColor="#0066ff" />

                    </LinearLayout>

                </FrameLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#999" />

                <RadioButton
                    android:id="@+id/rb_account_disable7"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:text="웰패밀리가 유용하지 않습니다."
                    android:textColor="#444" />

                <FrameLayout
                    android:id="@+id/fl_account_disable7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:gravity="center"
                    android:paddingBottom="12dp"
                    android:paddingLeft="42dp"
                    android:paddingRight="42dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/textView26"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="많은 가족 회원이 함께하면 웰페밀리가 더욱 더 즐거워집니다. 더 많은 가족을 우리 가족 페이지에 초대해보세요. 또한 추억소리와 같은 서비스 앱을 무료로 이용해보세요. 마지막으로 고객센터에서 웰페밀리 사용에 대한 안내를 받을 수 있습니다." />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|right"
                        android:background="#0066ff"
                        android:orientation="vertical"
                        android:paddingBottom="1dp">

                        <TextView
                            android:id="@+id/tv_account_disable_invite"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|right"
                            android:layout_weight="1"
                            android:background="#fff"
                            android:gravity="center_horizontal"
                            android:text="가족 초대하기"
                            android:textColor="#0066ff" />

                    </LinearLayout>

                </FrameLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#999" />

                <RadioButton
                    android:id="@+id/rb_account_disable8"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:text="다른 웰패밀리 계정이 있습니다."
                    android:textColor="#444" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#999" />

                <RadioButton
                    android:id="@+id/rb_account_disable9"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:text="기타 내용은 자세히 설명해주세요."
                    android:textColor="#444" />

                <FrameLayout
                    android:id="@+id/fl_account_disable8"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:paddingBottom="20dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#888"
                        android:orientation="vertical"
                        android:padding="1dp">

                        <EditText
                            android:id="@+id/et_account_disable_etc"
                            android:layout_width="match_parent"
                            android:layout_height="140dp"
                            android:background="#fff"
                            android:ems="10"
                            android:gravity="start"
                            android:inputType="text"
                            android:padding="10dp"
                            android:textColor="#444" />
                    </LinearLayout>

                </FrameLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#999" />

            </RadioGroup>
        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="121dp"
            android:background="#f5f5f5"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_account_disable"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="26dp"
                android:layout_marginRight="26dp"
                android:background="@drawable/round_corner_btn_gray"
                android:text="계정 비활성화 하기"
                android:textColor="#fff"
                android:textSize="15sp" />
        </RelativeLayout>

    </LinearLayout>
</ScrollView>