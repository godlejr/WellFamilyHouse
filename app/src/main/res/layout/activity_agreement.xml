<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1"
    android:orientation="vertical">

    <include
        layout="@layout/toolbar_register"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="0.12"
        android:background="#fff"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cb_agreement_all"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/selector_checkbox_agreement"
            android:button="@null"
            android:layout_height="20dp"
            android:layout_width="20dp" />


        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="모든 약관에 동의합니다."
            android:textColor="#000"
            android:textSize="14sp"
            android:textStyle="normal|bold" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:background="#e5e5e5" />

    <TextView
        android:id="@+id/textView26"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:text="이용약관"
        android:textColor="#000"
        android:textSize="14sp"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/agreement1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_weight="0.5"
        android:background="@drawable/round_corner_white_r10"
        android:padding="10dp"
        android:scrollbars="vertical"
        android:text="@string/agreement"
        android:textColor="#444444"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="#f1f1f1"
        android:orientation="horizontal"
        android:paddingLeft="15dp">

        <CheckBox

            android:id="@+id/cb_agreement1"
            android:layout_marginRight="10dp"
            android:background="@drawable/selector_checkbox_agreement"
            android:button="@null"
            android:layout_width="20dp"
            android:layout_height="20dp" />


        <TextView
            android:id="@+id/textView13"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="동의합니다."
            android:textColor="#000"
            android:textSize="14sp"
            android:gravity="center_vertical" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:background="#e5e5e5" />

    <TextView
        android:id="@+id/textView30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:elevation="1dp"
        android:paddingLeft="10dp"
        android:text="개인정보 수집·이용"
        android:textColor="#000"
        android:textSize="14sp"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/agreement2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="5dp"
        android:layout_weight="0.5"
        android:background="@drawable/round_corner_white_r10"
        android:padding="10dp"
        android:text="@string/agreement"
        android:textColor="#444444"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="#f1f1f1"
        android:orientation="horizontal"
        android:paddingLeft="15dp">

        <CheckBox
            android:id="@+id/cb_agreement2"
            android:layout_marginRight="10dp"
            android:background="@drawable/selector_checkbox_agreement"
            android:button="@null"
            android:gravity="top"
            android:layout_width="20dp"
            android:layout_height="20dp" />


        <TextView
            android:id="@+id/textView14"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="동의합니다."
            android:textColor="#000"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:layout_marginTop="1dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="0.18"
        android:background="#f5f5f5"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_agreement_join"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/round_corner_brown_r10"
            android:text="가입하기"
            android:textColor="#fff" />
    </LinearLayout>

</LinearLayout>