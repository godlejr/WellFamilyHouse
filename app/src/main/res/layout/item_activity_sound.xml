<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_corner"
    android:orientation="vertical"
    android:layout_marginTop="8dp"
    android:paddingTop="5dp">

    <LinearLayout
        android:id="@+id/ll_sound_story_total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:layout_marginBottom="3dp">

            <TextView
                android:id="@+id/tv_sound_story_title"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="노란 샤쓰의 사나이"
                android:textColor="#424242"
                android:textSize="18sp"
                android:textStyle="normal|bold"
                android:maxLines="1"
                android:ellipsize="end"
                android:gravity="center_horizontal" />

            <TextView
                android:id="@+id/tv_sound_story_singer"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="한명숙"
                android:textColor="#424242"
                android:textSize="16sp"
                android:ellipsize="end"
                android:maxLines="1"
                android:gravity="center_horizontal" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e5e5e5"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_sound_story_avatar"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/happyfeet"
                android:layout_width="50dp"
                android:layout_height="50dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="200dp"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_sound_story_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="유신재 (나)"
                    android:textColor="#424242" />

                <TextView
                    android:id="@+id/tv_sound_story_date"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:text="DATE"
                    android:textColor="#424242"
                    android:gravity="center_vertical"
                    android:textSize="14sp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/iv_sound_story_record"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/record_check"
                android:scaleType="fitCenter"
                android:layout_margin="5dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:id="@+id/ll_sound_story_location"
                android:layout_marginBottom="5dp">

                <ImageView
                    android:id="@+id/imageView19"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/location"
                    android:padding="3dp" />

                <TextView
                    android:id="@+id/tv_sound_story_location"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="영주 선비촌"
                    android:textColor="#542920"
                    android:textStyle="normal|bold"
                    android:textSize="15sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_sound_story_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="3"
                android:text="오랜만에 들으니 머시기머시기 \n 머시기 \n 머시기 \n 머시기"
                android:textColor="#424242"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginBottom="5dp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_sound_story_images_icon"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="#f5f5f5"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/imageView20"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                app:srcCompat="@drawable/camera" />

            <TextView
                android:id="@+id/textView44"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="추억 사진"
                android:textColor="#424242" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_sound_story_images_container"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal">

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e5e5e5" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_sound_story_comment"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_weight="0.1"
                android:gravity="right|center_vertical"
                android:text="88"
                android:textColor="#000"
                android:layout_alignBaseline="@+id/tv_sound_story_like"
                android:layout_alignBottom="@+id/tv_sound_story_like"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp" />

            <ImageView
                android:src="@drawable/comment"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:gravity="right|center_vertical"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/tv_sound_story_comment"
                android:layout_toStartOf="@+id/tv_sound_story_comment"
                android:layout_marginRight="5dp" />

            <TextView
                android:id="@+id/tv_sound_story_like"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:text="55"
                android:textColor="#000"
                android:gravity="right|center_vertical"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="70dp"
                />

            <ImageView
                android:src="@drawable/like_count"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="90dp" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="50dp">

        <CheckBox
            android:id="@+id/cb_item_sound_story_like"
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:button="@null"
            android:background="@drawable/checkbox_like" />

        <ImageButton
            android:id="@+id/ib_item_sound_story_comment"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_comment" />

    </LinearLayout>
</LinearLayout>