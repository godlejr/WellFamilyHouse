<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:fitsSystemWindows="false"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:orientation="vertical">

        <include
            layout="@layout/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eaeaea" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="10dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_family_activity_avatar"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:src="@drawable/main2" />

            <TextView
                android:id="@+id/tv_family_activity_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:text="NAME (00)"
                android:textColor="#000"
                android:textSize="31.3sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/textViewBlank1"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2" />

                <TextView
                    android:id="@+id/tv_family_activity_birth"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="2dp"
                    android:layout_weight="0.6"
                    android:text="0000.00.00"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:textAlignment="center"
                    android:gravity="left|center_vertical"
                   />

                <TextView
                    android:id="@+id/textViewBlank2"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_user_phone_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewBlank3"
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1" />

                    <TextView
                        android:id="@+id/tv_family_activity_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="000-0000-0000"
                        android:textColor="#000"
                        android:textSize="16sp"
                        android:visibility="visible" />

                    <ImageView
                        android:id="@+id/iv_user_call"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.02"
                        android:elevation="1dp"
                        android:src="@drawable/phone" />

                    <TextView
                        android:id="@+id/textView36"
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.08" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_family_activity_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:gravity="center_horizontal"
                android:text="EMAIL: aa@aaaaa.aa.aa"
                android:textColor="#414141"
                android:textSize="16sp"
                android:visibility="gone" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eaeaea" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="7.5dp"
            android:background="#dedede">
            <View
                android:layout_width="match_parent"
                android:layout_height="7.5dp"></View>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#f3f3f3"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="App 활동 내역"
                android:textColor="#000"
                android:textSize="12.5sp"
                android:gravity="center_vertical" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eaeaea" />

        <LinearLayout
            android:id="@+id/ll_selfit_story_list"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="#f9f9f9"
            android:orientation="horizontal"
            android:paddingLeft="15dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:src="@drawable/selffeet" />

            <TextView
                android:id="@+id/textView24"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="낙상예방 '셀핏'"
                android:textColor="#000"
                android:textSize="17sp" />

            <ImageButton
                android:id="@+id/btn_selfit"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:background="#00ffffff"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:tint="#542920"
                app:srcCompat="@drawable/arrow_right_black" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eaeaea" />

        <LinearLayout
            android:id="@+id/ll_memory_sound_story_list"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="#f9f9f9"
            android:orientation="horizontal"
            android:paddingLeft="15dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:src="@drawable/memory_sound" />

            <TextView
                android:id="@+id/textView25"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="기억력 훈력 '추억소리'"
                android:textColor="#000"
                android:textSize="17sp" />

            <ImageButton
                android:id="@+id/btn_mSound"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:background="#00ffffff"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:tint="#542920"
                app:srcCompat="@drawable/arrow_right_black" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eaeaea" />
    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/drawer_header"
        app:menu="@menu/menu_main"
        android:background="#fff"
        app:itemTextColor="#424242"
        app:theme="@style/NavigationDrawer"
        />
</android.support.v4.widget.DrawerLayout>