<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_corner_beige_r10"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_corner_white_r10"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_falldiagnosisstory_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:text="낙상위험 자가진단"
            android:textColor="@color/defaultTextColor"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_falldiagnosisstory_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:text="2017.06.01 17:40"
            android:textColor="@color/gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:id="@+id/blank"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/iv_falldiagnosisstory_img"
                android:layout_width="1dp"
                android:layout_height="98dp"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                app:srcCompat="@drawable/logo_selffeet" />

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="3">

                <TextView
                    android:id="@+id/tv_falldiagnosisstory_score"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_weight="2"
                    android:gravity="bottom|center_horizontal"
                    android:text="4/11"
                    android:textColor="@color/red"
                    android:textSize="50sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_falldiagnosisstory_result"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:gravity="top|center_horizontal"
                    android:text="OOOO"
                    android:textColor="@color/defaultTextColor"
                    android:textSize="28sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:weightSum="6">


        <RelativeLayout
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:elevation="1dp">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="right"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="30dp"
                android:src="@drawable/song_story_like_count" />

            <TextView
                android:id="@+id/tv_falldiagnosisstory_likecount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="10dp"
                android:gravity="right|center_vertical"
                android:text="77" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:elevation="1dp">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/song_story_comment" />

            <TextView
                android:id="@+id/tv_falldiagnosisstory_commentcount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imageView24"
                android:layout_toEndOf="@+id/imageView24"
                android:layout_toRightOf="@+id/imageView24"
                android:gravity="center"
                android:text="88" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_falldiagnosisstory_likebtn"
            android:layout_width="1dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/btn_like_unchecked" />

        <ImageView
            android:id="@+id/iv_falldiagnosisstory_commentbtn"
            android:layout_width="1dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/btn_comment" />

    </LinearLayout>

</LinearLayout>