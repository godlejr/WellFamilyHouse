        <activity android:name=".setting.deactivation.activity.DeactivationActivity" />
        <activity
            android:name=".setting.deactivationReason.activity.DeactivationReasonActivity"
            android:theme="@style/CustomAppTheme" />


        <activity android:name=".notification.NotificationActivity" />
        <activity android:name=".notification.NotificationFamilyStoryDetail" />
        <activity android:name=".notification.NotificationSongStoryDetail" />
        <activity android:name=".memory_sound.ModifySongStoryActivity" />


        <activity android:name=".dialog.popup.comment.edit.activity.CommentEditActivity" />
