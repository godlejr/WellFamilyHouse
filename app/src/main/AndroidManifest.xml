        <activity android:name=".family.base.activity.FamilyActivity" />
        <activity android:name=".family.photo.activity.PhotosActivity" />


        <activity android:name=".memory_sound.SongRecordActivity" />
        <activity android:name=".memory_sound.SongMainActivity" />
        <activity android:name=".memory_sound.SongChartListActivity" />
        <activity android:name=".memory_sound.SongCategoryListActivity" />
        <activity
            android:name=".memory_sound.SongPlayer"
            android:theme="@style/Theme.AppCompat.Dialog" />
        <activity
            android:name=".memory_sound.EmotionActivity"
            android:theme="@style/Theme.AppCompat.Dialog" />


        <activity android:name=".users.base.activity.UserActivity" />
        <activity android:name=".users.SongStoryDetailActivity" />
        <activity android:name=".users.SongStoryActivity" />
        <activity
            android:name=".users.EditUserActivity"
            android:theme="@style/CustomAppTheme" />


        <activity android:name=".family.manage.activity.ManageFamilyActivity" />
        <activity android:name=".family.managedetail.activity.ManageFamilyDetailActivity" />
