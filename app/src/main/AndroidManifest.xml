            android:name=".family.edit.activity.EditFamilyActivity"
            android:theme="@style/Theme.AppCompat.Dialog" />


        <activity android:name=".setting.verifyAccount.activity.VerifyAccountActivity" />
        <activity android:name=".setting.base.activity.SettingActivity" />
        <activity android:name=".setting.searchAccount.activity.SearchAccountActivity" />
        <activity android:name=".setting.resetPassword.activity.ResetPasswordActivity" />
        <activity android:name=".setting.agreement.activity.AgreementActivity" />
